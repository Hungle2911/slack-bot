<div class="flex items-center group">
  <%= title %>
  <div class="ml-1 flex-none flex flex-col">
    <%= link_to incidents_path(sort: column, direction: "asc"), 
                class: "h-2 w-2 text-gray-400 group-hover:text-gray-500 #{'text-black' if sort_column == column && sort_direction == 'asc'}", 
                data: { turbo_action: "replace", turbo_frame: "incidents" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-2 h-2">
        <path fill-rule="evenodd" d="M14.77 12.79a.75.75 0 01-1.06-.02L10 8.832 6.29 12.77a.75.75 0 11-1.08-1.04l4.25-4.5a.75.75 0 011.08 0l4.25 4.5a.75.75 0 01-.02 1.06z" clip-rule="evenodd" />
      </svg>
    <% end %>
    <%= link_to incidents_path(sort: column, direction: "desc"), 
                class: "h-2 w-2 text-gray-400 group-hover:text-gray-500 #{'text-black' if sort_column == column && sort_direction == 'desc'}", 
                data: { turbo_action: "replace", turbo_frame: "incidents" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-2 h-2">
        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>